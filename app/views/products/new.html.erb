<% provide(:title, 'Add new product') %>
<h1>Add new product</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@product) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :price %>
      <%= f.text_field :price %>
      
      <%= f.label :released_at %>
      <%= f.date_select :released_at %>
      <%= f.time_select :released_at, ignore_date: true %>

      <%= f.submit "Create new product", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>  
